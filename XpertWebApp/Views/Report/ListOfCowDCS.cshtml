    function disable() {
        $("#btnSelectAll").attr("disabled", "disabled");
        $("#btnUnSelectAll").attr("disabled", "disabled");
        $("#tblMccCode tbody input[type='checkbox']").attr("disabled", "disabled");
        $("#tblMccCode tbody input[type='checkbox']").prop("checked", false);
